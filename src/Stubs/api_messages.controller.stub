<?php

declare(strict_types=1);

namespace {{ namespace }};

use App\Enums\ResponseMessages;
use App\Http\Controllers\Controller;
use {{ requestNamespace }};
use {{ resourceNamespace }};
use {{ modelNamespace }};
use Illuminate\Http\JsonResponse;
use Illuminate\Http\Resources\Json\AnonymousResourceCollection;
use Symfony\Component\HttpFoundation\Response;

class {{ class }} extends Controller
{
    public function index(): AnonymousResourceCollection
    {
        return {{ resource }}::collection({{ model }}::latest()->paginate(10))
            ->additional(['message' => __(ResponseMessages::RETRIEVED->value)]);
    }

    public function store({{ request }} $request): JsonResponse
    {
        ${{ modelVariable }} = {{ model }}::create($request->validated());

        return {{ resource }}::make(${{ modelVariable }})
            ->additional(['message' => __(ResponseMessages::CREATED->value)])
            ->response()
            ->setStatusCode(Response::HTTP_CREATED);
    }

    public function show({{ model }} ${{ modelVariable }}): {{ resource }}
    {
        return {{ resource }}::make(${{ modelVariable }})
            ->additional(['message' => __(ResponseMessages::RETRIEVED->value)]);
    }

    public function update({{ request }} $request, {{ model }} ${{ modelVariable }}): {{ resource }}
    {
        ${{ modelVariable }}->update($request->validated());

        return {{ resource }}::make(${{ modelVariable }})
            ->additional(['message' => __(ResponseMessages::UPDATED->value)]);
    }

    public function destroy({{ model }} ${{ modelVariable }}): {{ resource }}
    {
        ${{ modelVariable }}->delete();

        return {{ resource }}::make(${{ modelVariable }})
            ->additional(['message' => __(ResponseMessages::DELETED->value)]);
    }
}
